extends templates/_layout

block vars
    - var page = "main_page";
    - var title = "why";

block content
    section.section
        .row.expanded
            .small-12.large-6
                .background-55.background_image.background_image-cover.flex-column.align-middle(style='background-image: url(./templates/_ares/img/svg/bg1.svg)')
                    .row.mb-15
                        .columns.small-12.medium-10.large-8.large-offset-2
                            include ./components/_breadcrumbs
                    .row
                        .columns.small-12.medium-10.large-8.large-offset-2
                            .title.title_size-medium.color-white.weight-bold Hoylu offers organizations a chance to improve the overall collaboration experience, increasing efficiency and morale.
            .hidden-small.hidden-medium.large-6
                .background-55.background_image.background_image-cover(style='background-image: url(./templates/_ares/img/jpg/why.jpg)')
    section.section
        .row
            .column.small-12
                -var featuresItems = [{"type":"","img":"./templates/_ares/img/jpg/features1.jpg","color":"orange","title":"Flexible"},{"type":"reverse","img":"./templates/_ares/img/jpg/why1.jpg","color":"green","title":"Shared"},{"type":"","img":"./templates/_ares/img/jpg/why2.jpg","color":"red","title":"Large dispays & more"},{"type":"reverse","img":"./templates/_ares/img/jpg/why3.jpg","color":"blue","title":"Intuitive"}];
                include ./components/_features
    section.section.patern-blue.section_padding.mb-0
        .row
            .columns.small-12.medium-6.large-3
                .row
                    .columns.small-12.mb-4
                        .title.title_size-medium.weight-bold Contact us
                    .columns.small-12
                        -var textBlock = [{"size":"medium","color":"grey","align":"left","paragraph":["We would love to hear from you! Provide the information below and one of our Inspiration gurus will get right back to you."]}];
                        include ./components/_text
            .columns.small-12.medium-6.large-9
                - var formBlock = [{"textarea":true,"btnForm":"send message","formItems":[{"medium":"12","large":"4","inpt":"Name*"},{"medium":"6","large":"4","inpt":"E-mail*"},{"medium":"6","large":"4","inpt":"Location"}]}];
                include ./components/_form